<h1>Groups</h1>
<% @groups.each do |group| %>
  <%= group.id %><br>
  <%= group.owner_id %><br>
  <%= link_to "#{group.name}", group_path(group.id) %><br>
  <%= group.introduction %><br>
  <% if group.owner_id == current_user.id %>
    <%= link_to "Edit", edit_group_path(group.id) %><br>
    <% end %>
<% end %>